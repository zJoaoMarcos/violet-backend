// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id
  name       String
  surname    String
  email      String   @unique
  passsword  String
  created_at DateTime
  Plant      Plant[]

  @@map("users")
}

model Plant {
  id     String @id
  name   String
  kind   String
  age    String
  serial String
  owner  User   @relation(fields: [userId], references: [id])
  userId String

  @@map("plants")
}
